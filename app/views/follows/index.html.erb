<%= stylesheet_link_tag 'user' %>
<h1><%= @user.username %>がフォローしている人</h1><br>
<br>
<div class="container">
	<table class="table-hover">
		<thead>
			<tr>
				<th>&nbsp;Image</th>
				<th>&nbsp;Name</th>
				<th>&nbsp;Follow</th>
				<th>&nbsp;Follower</th>
				<th>&nbsp;Articles</th>
				<th>&nbsp;unfollow</th>
			</tr>
		</thead>
		<tbody>
		<% @follows.each do |f| %>
			<tr>
				<td><%= image_tag (user_image(f.followed_id)) %></td>
				<td><%= link_to f.follow_name(f.followed_id) ,user_path(f.user_id) %></td>
				<td><%= f.user_follow_count(f.user_id) %></td>
				<td><%= f.user_follower_count(f.user_id) %></td>
				<td><%= f.user_article_count(f.followed_id) %></td>
				<% if f.follow_or_not(f.followed_id,current_user.id)==1 %>
				<td><%= link_to "unfollow", follow_path(f.follow_id(f.followed_id,current_user.id)),method: :delete %></td>
				<% else %>
				<td><%= link_to "create follow", user_follows_path(f.followed_id) , method: :post %></td>
				<% end %>
				<% end -%>
			</tbody>
		</table>
	</div>