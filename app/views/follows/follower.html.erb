<%= stylesheet_link_tag 'user' %>
<h1><%= @user.username %>のフォロワー</h1>
<br><br>
<div class="container">
	<table class="table-hover">
		<thead>
			<tr>
				<th>&nbsp;Image</th>
				<th>&nbsp;Name</th>
				<th>&nbsp;Follow</th>
				<th>&nbsp;Follower</th>
				<th>&nbsp;Articles</th>
				<th>&nbsp;follow</th>
				<% @follower.each do |f| %>
			</tr>
		</thead>
		<th><%= image_tag (user_image(f.user_id)) %></th>
		<th><%= link_to f.follow_name(f.user_id), user_path(f.user_id) %></th>
		<th><%= f.user_follow_count(f.user_id) %></th>
		<th><%= f.user_follower_count(f.user_id) %></th>
		<th><%= f.user_article_count(f.user_id) %></th>
		<% if f.follow_or_not(f.id,current_user.id)==1 %>
		<th><%= link_to "delete follow", follow_path(f.follow_id(f.id,current_user.id)) ,method: :delete %></th>
		<% else %>
		<th><%= link_to "create follow", user_follows_path(f.id) , method: :post %></th>
		<% end -%>

		<tbody>
			<tr>
				<% end -%>
			</tbody>
		</table>
	</div>