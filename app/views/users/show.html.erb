<%= stylesheet_link_tag 'profile' %>
<h1 style="color: black;"><%= @user_name %>のページ</h1><br>
<div class="container">
	<span>
		&nbsp; <%= link_to User.user_favorite_count(current_user.id),user_favorites_path(@user_id) %> favorite
	</span>&nbsp;&nbsp;
	<span>
		&nbsp; <%= link_to User.user_follow_count(@user_id),user_follows_path(@user_id) %> follow
	</span>&nbsp;&nbsp;
	<span>
		&nbsp;<%= link_to User.user_follower_count(@user_id),follower_user_follows_path(@user_id) %> follower
	</span>&nbsp;&nbsp;
	<% unless @user_id == @current_user_id %> 
	<% if User.follow_or_not(@user_id,current_user.id)==1 %>
	<button class="btn btn-danger"><%= link_to "unfollow", follow_path(User.follow_id(@user_id,current_user.id)) ,method: :delete %></button>
	</span>
	<% else %>
	<button class="btn btn-primary">&nbsp;&nbsp;<%= link_to "follow", user_follows_path(@user_id) , method: :post %>&nbsp;</button>
	<% end %>
	<% end -%>
	<br><br>
	<table class="table-hover">
		<thead>
			<tr>
				<th>&nbsp;title</th>
				<th>&nbsp;time</th>
				<th>&nbsp;favorite</th>
				<th>&nbsp;delete</th>
			</tr>
		</thead>
		<% @user_article.each do |article| %>	
		<tbody>
			<tr>
				<th>&nbsp;<%= link_to article.title, article_path(article) %></th>
				<th>&nbsp;<%= tokyotime(article.created_at) %></th>
				<th>&nbsp;<%= article.article_favorite_count(article)%></th>
				<% if article.author_or_not(article.id,current_user.id)== 1 %>
				<th>&nbsp;<%= link_to image_tag("/assets/drop.jpg/", :size => "30x30"), article_path(article), method: :delete -%></th>
				<% end -%>
			</tbody>
			<% end -%>
		</table>
	</div>