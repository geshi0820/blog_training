<%= stylesheet_link_tag 'profile' %>
<h1 style="color: black;"><%= @user.username %>のページ</h1><br>
<div class="container">
	<span>
		&nbsp; <%= link_to @user.user_favorite_count(current_user.id),user_favorites_path(@user.id) %> favorite
	</span>&nbsp;&nbsp;
	<span>
		&nbsp; <%= link_to @user.user_follow_count(@user.id),user_follows_path(@user.id) %> follow
	</span>&nbsp;&nbsp;
	<span>
		&nbsp;<%= link_to @user.user_follower_count(@user.id),follower_user_follows_path(@user.id) %> follower
	</span>&nbsp;&nbsp;
	<% unless @user.id == current_user.id %> 
	<% if @user.follow_or_not(@user.id,current_user.id)==1 %>
	<button class="btn btn-danger"><%= link_to "unfollow", follow_path(@user.follow_id(@user.id,current_user.id)) ,method: :delete %></button>
</span>
<% else %>
<button class="btn btn-primary">&nbsp;&nbsp;<%= link_to "follow", user_follows_path(@user.id) , method: :post %>&nbsp;</button>
<% end %>
<% end -%>
<br><br>
<table class="table-hover">
	<thead>
		<tr>
			<th>&nbsp;title</th>
			<th>&nbsp;time</th>
			<th>&nbsp;favorite</th>
			<th>&nbsp;delete</th>
		</tr>
	</thead>
	<% @user_article.each do |article| %>	
	<tbody>
		<tr>
			<td>&nbsp;<%= link_to article.title, article_path(article) %></td>
			<td>&nbsp;<%= tokyotime(article.created_at) %></td>
			<td>&nbsp;<%= article.article_favorite_count(article)%></td>
			<% if article.author_or_not(article.id,current_user.id)== 1 %>
			<td>&nbsp;<%= link_to image_tag("/assets/drop.jpg/", :size => "30x30"), article_path(article), method: :delete -%></td>
			<% end -%>
		</tbody>
		<% end -%>
	</table>
</div>