<%= stylesheet_link_tag "profile" %>
<h1><%= current_user.username %>のタイムライン</h1>
<div id="container">
	<div id="main">
		<% @articles.each do |article| %>
		<div id="contents">
			<div class="title"><%= link_to image_tag(article.user.user_image) ,user_path(article.user_id) %></div>
			<h2 class="title"><%= article.title %></h2>
			<% if article.favorites.find_by(user_id: current_user)  %>
			<h2 class="favorite"><%= link_to "♥",favorite_path(article.favorites.find_by(user_id: current_user)), method: :delete %></h2>
			<% else %>
			<h2 class="favorite"><%= link_to "♡",article_favorites_path(article),method: :post %></h2>
			<% end -%>
			<h3 class="favorite"><%= link_to "show",article_path(article)%></h3>
			<br><br><br><br><br>
			<div class="item" ><%= image_tag article.image_url%></div>
			<div class="article"><%= article.article %></div>
		</div>
		<% end -%>
	</div>
</div>
