<h1><%= @user.username %>のお気に入り</h1><br><br>
<div class="container">
	<table class="table-hover">
		<thead>
			<tr>
				<th>記事名</th>
				<th>作者</th>
				<th>お気に入り数</th>
				<th>お気に入り外す</th>
			</tr>
		</thead>
		<% @favorite_users.each do |f| %>	
		<tbody>
			<tr>
				<td><%= link_to @articles.find(f.article_id).title , article_path(f.article_id) %></td>
				<td><%= link_to image_tag(user_image(@articles.find(f.article_id).user_id)) ,user_path(@articles.find(f.article_id).user_id) %></td>
				<td><%= @favorites.where(article_id: f.article_id).count %></td>
				<% if current_user.favorites.find_by_article_id(f.article_id) %>
				<td><h4><%= link_to "♥",favorite_path(current_user.favorites.find_by_article_id(f.article_id)), method: :delete %></h4></td>
				<% else %>
				<td><h4><%= link_to "♡",article_favorites_path(f.article),method: :post %></h4></td>
				<% end -%>
			</tr>
			<% end -%>
		</tbody>
	</table>
</div>


