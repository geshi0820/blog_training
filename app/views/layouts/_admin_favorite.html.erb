<%= stylesheet_link_tag 'profile' %>
<span class="admin">管理者専用</span>
<h1><%= @user.username %>のお気に入り</h1><br><br>
<div class="container">
	<table class="table-hover">
		<thead>
			<tr>
				<th>記事名</th>
				<th>写真</th>
				<th>お気に入り数</th>
			</tr>
		</thead>
		<% @articles.each do |f| %>	
		<tbody>
			<tr>
				<td><%= link_to f.title , article_path(f) %></td>
				<td><%= image_tag(f.image_url(:thumb).to_s) %></td>
				<td><%= f.favorites.size%></td>
			</tr>
			<% end -%>
		</tbody>
	</table>
</div>

