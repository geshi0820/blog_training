	<p>Title：<%= @article.title%> </p>
	Article：
<p>
	<% @article.article%>
	<%= image_tag (@article.image_url,:size =>"200x200" ) %>
</p>

<hr>


<br><br>
<h3>【Comment】</h3>
<% @article.comments.reverse_each do |comment| %>
<!-- showへの接続もできている。commentsのDBもある。commentのカラムもある。前の掲示板のつくりとも全く同じ。-->
<li>
	<%= comment.comment %>
	<%= link_to "delete", article_comment_path(comment.article_id, comment.id), method: :delete %>
	<%= link_to "edit", edit_article_comment_path(comment.article_id, comment.id) %>
		<hr></li>
	<% end %>


	<%= form_for [@article, @article.comments.build] do |f|%>
	<%= f.label :Message %>：
	<%= f.text_field :comment %> 
	<%= f.hidden_field :user_id ,:value => current_user.id%>
	<%= f.submit %>
	<br><br><% end %>




