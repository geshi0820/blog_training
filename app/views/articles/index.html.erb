<br>
<botton class="btn btn-info"><%= link_to "Create", new_article_path %></i></botton>
<div class="container" style="padding:20px 0">
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Title</th>
				<th>Time</th>
				<th>Show</th>
				<th>Follow</th>
				<th>Favorite</th>
			</tr>
		</thead>
		<% @articles.reverse_each do |article| %> 
		<tbody>	
			<tr>
				<th><%= @users.find(article.user_id).username %></th>
				<th><%= article.title %></th>
				<th><%= tokyotime(article.created_at) %></th>
				<th><%= link_to "show", article_path(article),method: :get-%> </th>
				<th><% if @follows.where("user_id = ? and followed_id = ?", @userid , article.user_id).pluck(:user_id,:followed_id).include?([@userid,article.user_id]) %>

					 <%= link_to image_tag("/assets/follow.jpg"), follow_path(@follows.where("user_id = ? and followed_id = ?", @userid , article.user_id).pluck(:id).at(0)),method: :delete %> 
					<% else %>
					 <%= link_to image_tag("/assets/unfollow.jpg"), article_follows_path(article), method: :post -%> 
					<% end -%>
				</th>
				<th><% if @favorites.where("article_id = ? and user_id = ?", article.id , @userid).pluck(:article_id,:user_id).include?([article.id,@userid]) %>
						<%= link_to image_tag("/assets/favorite_shade.jpg"), favorite_path(@favorites.where("article_id = ? and user_id = ?", article.id , @userid).pluck(:id).at(0)), method: :delete %>
					<% else %>
						<%= link_to image_tag("/assets/favorite_star.jpg"), article_favorites_path(article), method: :post%> 
					<% end -%></th>
				</tr>
			</tbody>
			<% end -%>
		</table>
	</div>

