<h1>Edit Thread</h1>

<%= form_for @article do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title%><br><br>
<%= f.label :article %><br>
<%= f.text_area :article, :size => "100x20"%><br>
<div class="field">
	<%= f.label :image %><br />
	<%= f.file_field :image %>
</div>
<%= f.submit %>

<% end %>